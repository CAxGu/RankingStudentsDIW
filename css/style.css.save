/* Styles go here */


#header-site img{
    border:3px;
    border-style: ridge;
    border-color: black;
   margin: 0px;
   height: 100%;
   width: 100%;
}   


nav {
    border:3px;
    border-style: dashed;
    border-color: black;
    background-color: orange;
}

.nav-a:hover {
    color: black;
}

.nav-a{
    color: #fffcf7;
    font-weight: bold;
    padding-left: 1em;
    border-left: 1px,solid,black;
}  


body{
    background-color: palegoldenrod;
    margin: 0px;
}


#contentweb {
   margin-left: 2em !important;
}

#content *{
    margin: 1em !important;
    padding-bottom: 2em !important;
 }

#contentweb a:hover{
    color: red;
}

button {
    background-color: #6f9ceb;
    border-radius: 8px;
    font-family: Arial;
    font-weight: bold;
    color: #ffffff;
    padding-left: .5em;
    padding-right: .5em;
}

input {
    border-radius: 4px;
}

td{
    font-family: sans-serif;
    color: #000000;
    padding-left: 0.25em;
}


footer{
    border:6px;
    border-style: inset;
    border-color: grey;
    position: relative ;
    right: 0  ;
    bottom: 0  ;
    left: 0  ;
    padding: 1em ;
    padding-bottom: 1.5em;
    background-color: purple;
    text-align: center ;
    color: white;

}

#notify{
    background-color: purple;
    color: grey;
    position:relative;
    bottom:0;
   
}


